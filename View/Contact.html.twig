{% extends "Master/FrontTemplate.html.twig" %}

{% block meta %}
    {{ parent() }}
    <meta name="author" content="BiblioApp" />
    <meta name="robots" content="" />
    <meta name="description" content="Contactar con nosotros"/>
    <meta name="keywords" content="contactar, biblioteca, alquiler, libros" />
    <meta property="og:title" content="Contactar con nosotros"/>
    <meta property="og:description" content="Contactar con nosotros"/>
    <meta property="og:image" content="/Assets/Images/biblio-card.png"/>

    <title>Contactar con nosotros</title>
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .banner { background-image: url(/Assets/Images/background/bg3.jpg); }
        #message { height: 150px; }
        #recaptcha { display:none; }
    </style>
{% endblock %}

{% block preloader %}
    {{ parent() }}
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% from 'Macro/Utils.html.twig' import pageBanner, formInput %}

    <!--banner-->
    {{ pageBanner(controller) }}

    <!-- form contact -->
    <section class="content-inner bg-light">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 m-b40">
                    <div class="contact-area1 m-r20 m-md-r0">
                        <div class="section-head style-1">
                            <h6 class="sub-title text-primary">Contactar</h6>
                            <h3 class="title m-b20">Completar el formulario</h3>
                        </div>

                        <form class="form-floating" method="POST" action="Contact">
                            <input type="hidden" class="form-control" name="action" value="contact">
                            {{ formInput(controller, 'text', 'name', 'Nombre completo') }}
                            {{ formInput(controller, 'email', 'email', 'Correo electrónico') }}
                            {{ formInput(controller, 'tel', 'phone', 'Teléfono') }}

                            <div class="form-floating mb-3">
                                <textarea id="message" class="form-control" placeholder="Mensaje" name="message" required></textarea>
                                <label for="message">Mensaje</label>
                            </div>

                            <div class="form-check mb-3">
                                <input id="rgpd" type="checkbox" class="form-check-input" name="rgpd" value="" required>
                                <label class="form-check-label" for="flexCheckDefault">
                                    He leído y acepto la <a href="" target="_blank">Política de Privacidad</a>.
                                </label>
                            </div>

                            <div class="input-row">
                                <p class="border border-3 mt-3 p-2">
                                    La persona responsable del archivo, utilizará esta información para responder a las
                                    solicitudes de contacto. Los datos enviados se guardarán en nuestros servidores
                                    dentro de la UE. Puede acceder, rectificar o eliminarlos si lo desea, enviando un
                                    mensaje utilizando este mismo formulario, indicando en él la información de contacto
                                    original, así como la acción deseada.
                                </p>
                            </div>

                            <div class="mb-3">
                                <div class="g-recaptcha" data-sitekey="<!-- Put reCaptcha Site Key -->" data-callback="verifyRecaptchaCallback" data-expired-callback="expiredRecaptchaCallback"></div>
                                <input class="form-control d-none" id="recaptcha" data-recaptcha="true" required data-error="Por favor completa el Captcha">
                            </div>

                            <div>
                                <button name="submit" type="submit" value="submit" class="btn w-100 btn-primary btnhover">A C E P T A R</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
{% endblock %}
