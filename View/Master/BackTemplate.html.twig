<!DOCTYPE html>
<html xmlns="http://www.w3.org/1999/xhtml" lang="{{ constant('APP_LANG') | slice(0, 2) }}" xml:lang="{{ constant('APP_LANG') | slice(0, 2) }}" >
    <head>
        {% block meta %}
            <meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
            <meta http-equiv="X-UA-Compatible" content="IE=edge">
            <meta name="viewport" content="width=device-width, initial-scale=1.0" />
            <meta name="generator" content="BiblioApp" />
            <meta name="robots" content="noindex"/>
            <meta name="keywords" content="biblioteca, asociados, alquiler, libros" />
            <meta property="og:title" content="Biblioteca para alquiler de libros"/>
            <meta property="og:description" content="Biblioteca para alquiler de libros"/>
            <meta property="og:image" content="Assets/Images/biblio-card.png"/>
        {% endblock %}
        {% block icons %}
            <link rel="icon" type="image/x-icon" href="{{ asset('Assets/Images/favicon.png') }}" />
            <link rel="apple-touch-icon" sizes="180x180" href="{{ asset('Assets/Images/apple-icon-180x180.png') }}" />
            {# TODO: add apple icons for ipad and iphone #}
        {% endblock %}
        {% block css %}
            <link rel="stylesheet" href="{{ asset('node_modules/bootstrap/dist/css/bootstrap.min.css') }}" />
            <link rel="stylesheet" href="{{ asset('node_modules/@fortawesome/fontawesome-free/css/all.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('Assets/CSS/template_back.css') }}"/>
            <link rel="stylesheet" href="{{ asset('Assets/CSS/OverlayScrollbars.min.css') }}"/>
            <link rel="stylesheet" href="{{ asset('Assets/CSS/adminlte.min.css') }}"/>
        {% endblock %}
        {% block javascripts %}
            <script src="{{ asset('node_modules/jquery/dist/jquery.min.js') }}"></script>
            <script src="{{ asset('node_modules/bootstrap/dist/js/bootstrap.bundle.min.js') }}"></script>
            <script src="{{ asset('node_modules/@fortawesome/fontawesome-free/js/all.min.js') }}"></script>
            <script src="{{ asset('Assets/JS/template_back.js') }}?v=6"></script>
            <script src="{{ asset('Assets/JS/jquery.overlayScrollbars.min.js') }}"></script>
            <script src="{{ asset('Assets/JS/adminlte.min.js') }}"></script>
        {% endblock %}
    </head>
    {% block fullBody %}
        <body class="layout-navbar-fixed layout-fixed hold-transition sidebar-mini">
            <div class="wrapper">
            {% block navbar %}
                <nav class="main-header navbar navbar-expand navbar-white navbar-light">
                {% block navbarContent %}
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
                        </li>
                    </ul>
                    <ul class="navbar-nav ml-auto">
                        <li class="nav-item dropdown ">
                            <a class="nav-link dropdown-toggle mr-md-2" href="#" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="user-nav d-sm-flex  d-lg-inline">
                                    <i class="fas fa-user fa-sm fa-fw mr-2"></i>
                                    <span class="user-name font-weight-bolder">{{ controller.user.name }}</span>
                                </div>
                            </a>
                            <div class="dropdown-menu dropdown-menu-md dropdown-menu-right" aria-labelledby="dropdown-user">
                                <a class="dropdown-item" href="{{ controller.user.url() }}"><i class="fas fa-edit fa-sm fa-fw mr-2 text-gray-300"></i> Editar perfil</a>
                                <div class="dropdown-divider"></div>
                                <a class="dropdown-item text-danger" href="?logout=TRUE"><i class="fas fa-arrow-right-from-bracket fa-sm fa-fw mr-2"></i>  Cerrar sesi√≥n</a>
                            </div>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link" data-widget="fullscreen" href="#" role="button">
                                <i class="fas fa-expand-arrows-alt"></i>
                            </a>
                        </li>
                    </ul>
                {% endblock %}
                </nav>
                <!-- Main Sidebar Container -->
                <aside class="main-sidebar sidebar-dark-primary elevation-4">
                    <!-- Brand Logo -->
                    <a href="./" class="brand-link">
                        <img src="{{ asset('Assets/Images/logo.png') }}" alt="Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
                        <span class="brand-text font-weight-light">BiblioApp</span>
                    </a>
                    <!-- Sidebar -->
                    <div class="sidebar">
                        <nav class="mt-2">
                            <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                                <li class=" nav-item">
                                    <a class="nav-link" href="{{ asset('Main') }}">
                                        <i class="fa-solid fa-solar-panel mr-2"></i>
                                        <p>Inicio</p>
                                    </a>
                                </li>
                                <div class="sidebar-divider"></div>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ asset('Member') }}" >
                                        <i class="fa-regular fa-address-book mr-2"></i>
                                        <p>Asociados</p>
                                    </a>
                                </li>
                                <div class="sidebar-divider"></div>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ asset('Book') }}" >
                                        <i class="fa-solid fa-book-bookmark mr-2"></i>
                                        <p>Libros</p>
                                    </a>
                                </li>
                                <div class="sidebar-divider"></div>
                                <li class="nav-item">
                                    <a class="nav-link" href="{{ asset('ListUser') }}" >
                                        <i class="fa-solid fa-user-gear mr-2"></i>
                                        <p>Usuarios</p>
                                    </a>
                                </li>
                                <div class="sidebar-divider"></div>
                            </ul>
                        </nav>
                    </div>
                </aside>
            {% endblock %}
            {% block messages %}
            {% endblock %}
            {% block body %}
            {% endblock %}
            </div>
        </body>
    {% endblock %}
</html>