{% extends "Master/FrontTemplate.html.twig" %}

{% block meta %}
    {{ parent() }}
    <meta name="author" content="BiblioApp" />
    <meta name="robots" content="" />
    <meta name="description" content="Registrar nuevos miembros de la comunidad"/>
    <meta name="keywords" content="miembros, biblioteca, alquiler, libros" />
    <meta property="og:title" content="Registro de miembros"/>
    <meta property="og:description" content="Permite realizar el proceso de alta a nuevos miembros de la comunidad"/>
    <meta property="og:image" content="{{ asset('Assets/Images/biblio-card.png') }}"/>

    <title>Registro de miembros</title>
{% endblock %}

{% block css %}
    {{ parent() }}
    <style>
        .banner { background-image: url(/Assets/Images/background/contactar.jpg); }
        #recaptcha { display:none; }
    </style>
{% endblock %}

{% block header %}
    {{ parent() }}
{% endblock %}

{% block body %}
    {{ parent() }}
    {% from 'Macro/Utils.html.twig' import pageBanner, formInput %}

    <!--banner-->
    {{ pageBanner(controller) }}

    <!--login panels-->
    <section class="content-inner border-bottom bg-grey">
        <div class="container">
            <div class="row">
                <div class="col-lg-12 m-b40">
                    <div class="contact-area1 m-r20 m-md-r0">
                        <div class="section-head style-1">
                            <h6 class="sub-title text-primary">Registrar</h6>
                            <h3 class="title m-b20">Completar el formulario</h3>
                        </div>

                        <form id="formRegister" class="form-floating" method="POST" action="RegisterMember">
                            <input id="action" name="action" type="hidden" class="form-control" value="new">
                            <div class="row g-2">
                                <div class="col-md-8">
                                    {{ formInput(controller, 'text', 'name', 'Nombre completo', '', true) }}
                                </div>
                                <div class="col-md-4">
                                    {{ formInput(controller, 'text', 'document', 'Documento Oficial', '', true) }}
                                </div>
                            </div>
                            {{ formInput(controller, 'text', 'address', 'Dirección', '', true) }}
                            <div class="row g-2">
                                <div class="col-md-8">
                                    {{ formInput(controller, 'email', 'email', 'Correo electrónico', '', true) }}
                                </div>
                                <div class="col-md-4">
                                    {{ formInput(controller, 'tel', 'phone', 'Teléfono', '', true) }}
                                </div>
                            </div>

                            <hr>
                            <div class="row g-2">
                                <div class="col-md">
                                    {{ formInput(controller, 'password', 'password', 'Contraseña', '', true) }}
                                </div>
                                <div class="col-md">
                                    {{ formInput(controller, 'password', 'confirm', 'Confirmar contraseña', '', true) }}
                                </div>
                            </div>
                            <hr>
                            <div class="form-check mb-3">
                                <input id="rgpd" type="checkbox" class="form-check-input" name="rgpd" value="" required>
                                <label class="form-check-label" for="rgpd">
                                    He leído y acepto la <a href="PrivacyPolicy" target="_blank">Política de Privacidad</a>.
                                </label>
                            </div>

                            <div class="row">
                                <div class="col-lg-8">
                                    <p class="border border-3 mb-3 p-2">
                                        La persona responsable del archivo, utilizará esta información para responder a las
                                        solicitudes de contacto. Los datos se guardarán en nuestros servidores
                                        dentro de la UE. Puede acceder, rectificar o eliminarlos, enviando un
                                        mensaje utilizando este mismo formulario, indicando en él la información de contacto
                                        original, así como la acción deseada.
                                    </p>
                                </div>

                                <div class="col-lg-4 mb-3">
                                    <div class="g-recaptcha" data-sitekey="<!-- Put reCaptcha Site Key -->" data-callback="verifyRecaptchaCallback" data-expired-callback="expiredRecaptchaCallback"></div>
                                    <!-- <input class="form-control d-none" id="recaptcha" name="recaptcha" data-recaptcha="true" required data-error="Por favor completa el Captcha"> -->
                                </div>
                            </div>

                            <div>
                                <button name="submit" type="submit" value="submit" class="btn w-100 btn-primary btnhover">A C E P T A R</button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}

{% block footer %}
    {{ parent() }}
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script src="https://www.google.com/recaptcha/api.js"></script>
{% endblock %}
