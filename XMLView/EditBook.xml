<view>
    <columns>
        <group name="main" numcolumns="6">
            <column name="titulo" title="título" numcolumns="10" order="100">
                <widget type="text" fieldname="title" maxlenght="100" required="true" />
            </column>
            <column name="codigo" title="código" numcolumns="2" order="110">
                <widget type="text" fieldname="id" readonly="true" required="true" />
            </column>
            <column name="autor" numcolumns="9" order="120">
                <widget type="text" fieldname="author" maxlenght="100" required="true" />
            </column>
            <column name="ibsn" numcolumns="3" order="130">
                <widget type="number" fieldname="ibsn" maxlenght="13" required="true" />
            </column>
        </group>
        <group name="synopsis" numcolumns="6">
            <column name="sinopsis" numcolumns="12" order="200">
                <widget type="textarea" fieldname="synopsis" rows="5" />
            </column>
        </group>
    </columns>
</view>